<view><block wx:if="{{list.length!==0}}"><view class="todo-header flex"><view class="todo-header-left"><text class="active-text">{{text}}</text><text>{{listData.length+"条"}}</text></view><view class="todo-header-right flex"><view data-event-opts="{{[['tap',[['tab',[0]]]]]}}" class="{{['todo-header-right-item',(activeIndex===0)?'active-tab':'']}}" bindtap="__e">全部</view><view data-event-opts="{{[['tap',[['tab',[1]]]]]}}" class="{{['todo-header-right-item',(activeIndex===1)?'active-tab':'']}}" bindtap="__e">待办</view><view data-event-opts="{{[['tap',[['tab',[2]]]]]}}" class="{{['todo-header-right-item',(activeIndex===2)?'active-tab':'']}}" bindtap="__e">已完成</view></view></view></block><block wx:if="{{list.length===0}}"><view class="todo-no-data flex"><image src="../../static/default.png" mode="aspectFit"></image><text class="todo-no-data-text">当前没有待办事项</text></view></block><block wx:else><view class="todo-wraper"><block wx:for="{{listData}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['finished',['$0'],[[['listData','',index,'id']]]]]]]}}" class="{{['todo-list',(item.checked)?'todo-finished':'']}}" bindtap="__e"><view class="todo-list-checkbox"><view class="checkbox"></view></view><view class="todo-list-text">{{item.content}}</view></view></block></view></block><view data-event-opts="{{[['tap',[['create',['$event']]]]]}}" class="todo-create flex" bindtap="__e"><text class="{{['iconfont icon-add',(textShow)?'todo-active':'']}}"></text></view><block wx:if="{{active===true}}"><view class="{{['todo-content flex',(textShow)?'todo-text-active':'']}}"><view class="todo-content-box flex"><view class="create-input"><input type="text" placeholder="请输入你要创建的 todo" data-event-opts="{{[['input',[['__set_model',['','value','$event',[]]]]]]}}" value="{{value}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['add',['$event']]]]]}}" class="create-button flex" bindtap="__e">创建</view></view></view></block></view>